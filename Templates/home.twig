{% for valeur in Projets %}

{% if loop.index is odd %}

    <!-- ==========================================================================================================================================
    ================================================================ SECTION BLACK ================================================================
    =========================================================================================================================================== -->
    <section class="sectionProjet projetBlack">
        <div class="container">
            <div class="row">
                    
                <div class="texteProjet col-sm-12 col-md-12 col-lg-12 col-xl-6">

                    <h2>{{ valeur.titre }}</h2>
                    
                    <p>{{ valeur.description |nl2br }}</p>
            
                    <div class="footerTexteProjet">
                        <a href="{{ valeur.liengit }}" class="logoGit logoGitWhite"><img src="Assets/Images/logoGitWhite.png" alt="{{ valeur.titre }}"></a>
                        <h4 class="dureeProjet">{{ valeur.dureeprojet }}</h4>
                    </div>
                    
                </div> <!-- Fin Col -->

                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-6"> 

                    <div id="carrousel{{ loop.index }}" class="carrouselBlack carousel slide" data-ride="carousel"> <!-- Début Carrousel -->

                        <ol class="carousel-indicators">
                            <li data-target="#carrousel{{ loop.index }}" data-slide-to="0" class="active"></li>
                            <li data-target="#carrousel{{ loop.index }}" data-slide-to="1"></li>
                            <li data-target="#carrousel{{ loop.index }}" data-slide-to="2"></li>
                            <li data-target="#carrousel{{ loop.index }}" data-slide-to="3"></li>
                        </ol>

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <a href="{{ valeur.lienprojet }}">
                                <img class="d-block w-100" src="{{ valeur.image1 }}" alt="{{ valeur.titre }}">
                                </a>
                            </div>
                            <div class="carousel-item">
                                <a href="{{ valeur.lienprojet }}">
                                <img class="d-block w-100" src="{{ valeur.image2 }}" alt="{{ valeur.titre }}">
                                </a>
                            </div>
                            <div class="carousel-item">
                                <a href="{{ valeur.lienprojet }}">
                                    <img class="d-block w-100" src="{{ valeur.image3 }}" alt="{{ valeur.titre }}">
                                </a>
                            </div>
                            <div class="carousel-item">
                                <a href="{{ valeur.lienprojet }}">
                                    <img class="d-block w-100" src="{{ valeur.image4 }}" alt="{{ valeur.titre }}">
                                </a>
                            </div>
                        </div>

                        <a class="carousel-control-prev" href="#carrousel{{ loop.index }}" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>

                        <a class="carousel-control-next" href="#carrousel{{ loop.index }}" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>

                    </div>  <!-- Fin Carrousel -->

                </div> <!-- Fin col -->

            </div>  <!-- Fin row -->

        </div>  <!-- Fin container -->
    </section>

{% else %}

    <!-- ==========================================================================================================================================
    ================================================================ SECTION WHITE ================================================================
    =========================================================================================================================================== -->
    <section class="sectionProjet projetWhite">
        <div class="container">
            <div class="row">

                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-6">

                    <div id="carrousel{{ loop.index }}" class="carousel slide carrouselWhite" data-ride="carousel"> <!-- Début Carrousel -->

                        <ol class="carousel-indicators">
                            <li data-target="#carrousel{{ loop.index }}" data-slide-to="0" class="active"></li>
                            <li data-target="#carrousel{{ loop.index }}" data-slide-to="1"></li>
                            <li data-target="#carrousel{{ loop.index }}" data-slide-to="2"></li>
                            <li data-target="#carrousel{{ loop.index }}" data-slide-to="3"></li>
                        </ol>

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <a href="{{ valeur.lienprojet }}">
                                    <img class="d-block w-100" src="{{ valeur.image1 }}" alt="{{ valeur.titre }}">
                                </a>
                            </div>
                            <div class="carousel-item">
                            <a href="{{ valeur.lienprojet }}">
                                    <img class="d-block w-100" src="{{ valeur.image2 }}" alt="{{ valeur.titre }}">
                                </a>
                            </div>
                            <div class="carousel-item">
                            <a href="{{ valeur.lienprojet }}">
                                    <img class="d-block w-100" src="{{ valeur.image3 }}" alt="{{ valeur.titre }}">
                                </a>
                            </div>
                            <div class="carousel-item">
                            <a href="{{ valeur.lienprojet }}">
                                    <img class="d-block w-100" src="{{ valeur.image4 }}" alt="{{ valeur.titre }}">
                                </a>
                            </div>
                        </div>

                        <a class="carousel-control-prev" href="#carrousel{{ loop.index }}" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>

                        <a class="carousel-control-next" href="#carrousel{{ loop.index }}" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>

                    </div>  <!-- Fin Carrousel -->

                </div> <!-- Fin col -->


                <div class="texteProjet col-sm-12 col-md-12 col-lg-12 col-xl-6">

                    <h2>{{ valeur.titre }}</h2>

                    <p>{{ valeur.description |nl2br }}</p>

                    <div class="footerTexteProjet">
                        <a href="{{ valeur.liengit }}" class="logoGit logoGitBlack"><img src="Assets/Images/logoGitBlack.png" alt="{{ valeur.titre }}"></a>
                        <h4 class="dureeProjet">{{ valeur.dureeprojet }}</h4>
                    </div>
                    
                </div> <!-- Fin Col -->

            </div>  <!-- Fin row -->

        </div>  <!-- Fin container -->

    </section>

{% endif %}

